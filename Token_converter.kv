#
#
#Main LAyOut
<Main_Screen>:
    name: 'Main'
    #
    # Frame LayOut
    BoxLayout:
        
        size_hint: None, None
        size: root.width, root.height
        orientation: 'vertical'


        # 0 1
        # Introduction LayOut
        BoxLayout:
            size_hint: None, None 
            size: root.width , root.height/6
            #pos_hint: {'top': 1, 'center_x':0.5 }           
            spacing: '10dp'
            padding: '10dp'
            #
            # A canvas
            canvas.before:  
                Color:
                    rgba: .922 , 0 , .161 , .7
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [0 ,  0 , 25  , 25 ]
            
            orientation: 'vertical'
            #
            # introducing Label
            Label:  
                markup: True
                text:"[color=000000] [b] Welcom [/b] \nTO\nToken Converter[/color]"
                size: self.texture_size
                font_size: 20
                pos_hint: { 'center_x':.5 , 'top': 0 }
                size_hint: None , None
                valign: 'center'
                halign: 'center'
                
                

        # 1 1
        #Main layOut
        GridLayout:
            rows: 1
            cols: 3
            size_hint: None , None
            size: root.width , root.height/1.5
            spacing: '10dp'
            padding: '10dp'

            # row 1 col 1
            # Tron Button
            Button:
                id: "Tron"
                markup: True
                text: "[color=000000]TRX[/color]"
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Line:
                        width: .5
                        rectangle: self.x, self.y, self.width, self.height

                size_hint: (1/3 , 1/3)
               
                background_color: (1, 1 , 1 , 0)
                
                on_release:
                    app.root.current = 'trx'
                    root.manager.transition.direction ='left'

                Image:
                    source: 'images/TRX.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y + 100

            # row 1 col 2
            # Bit Coin Button
            Button:
                id: 'Bit Coin'
                markup: True
                text: "[color=000000]BTC[/color]"
                background_color: (1, 1 , 1 , 0)
                size_hint: (1/3 , 1/3)
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Line:
                        width: 1
                        rectangle: self.x, self.y, self.width, self.height
                
                on_release:
                    app.root.current = 'btc'
                    root.manager.transition.direction ='left'

                Image:
                    source: 'images/BTC.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y + 100

            # row 1 col 3
            #Ether Button
            Button:
                id: 'Ether'
                markup: True
                text: "[color=000000]ETH[/color]"
                background_color: (1, 1 , 1 , 0)
                
                
                
                size_hint: (1/3 , 1/3)
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Line:
                        width: 1
                        rectangle: self.x, self.y, self.width, self.height
                


                on_release:
                    app.root.current = 'ether'
                    root.manager.transition.direction ='left'
                Image:
                    source: 'images/ETH.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y + 100
        # 1 2
        # Aboute Donate Butt            
        BoxLayout:
            size_hint: None , None
            size: root.width , root.height/6
            pos_hint: {'center_x' : .5 , 'bottom' : 1}
            spacing: '10dp'
            padding: '10dp'


            #
            # About Button
            Button:
                id: "About"

                markup: True

                text: "[color=000000]About[/color]"

               #
               #Canvas
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Line:
                        width: 1
                        rectangle: self.x, self.y, self.width, self.height
    

                size_hint: (.16 , 1)
                
                pos_hint:{"x" : .2 , 'left': 1}

                background_color: (1, 1 , 1 , 0)

                bachground_normal: "\TRX.png"

                on_release:
                    app.root.current = 'Main'
                    root.manager.transition.direction ='left'
            #
            # Donate Button
            Button:
                id: "Donate"

                markup: True

                text: "[color=000000]donate[/color]"

               
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Line:
                        width: 1
                        rectangle: self.x, self.y, self.width, self.height
    

                size_hint: (.16 , 1)
                
                pos_hint:{"x" : .2 , 'left': 1}

                background_color: (1, 1 , 1 , 0)

                bachground_normal: "\TRX.png"

                on_release:
                    app.root.current = 'Main'
                    root.manager.transition.direction ='left'

